# Server Configuration
PORT=3000
NODE_ENV=development

# API Security
API_KEY=your-secret-api-key-here
JWT_SECRET=your-jwt-secret-here

# Database Configuration (for metadata)
# IMPORTANTE: 
# - Se usar MySQL em container Docker: DB_HOST=mysql (padr√£o)
# - Se usar MySQL nativo do servidor: DB_HOST=host.docker.internal
# - Porta do container MySQL: 3307 no host (para evitar conflito com MySQL nativo na 3306)
DB_HOST=mysql
DB_PORT=3306
DB_USER=txuna_user
DB_PASSWORD=your-password
DB_NAME=txuna_sites

# WordPress Default Configuration
WP_ADMIN_USER=admin
WP_ADMIN_EMAIL=admin@example.com
WP_DB_PREFIX=wp_

# Paths
BASE_DIR=/var/www
API_PATH=/var/www/mozloja.online
NGINX_SITES_AVAILABLE=/etc/nginx/sites-available
NGINX_SITES_ENABLED=/etc/nginx/sites-enabled
NGINX_RELOAD_CMD=systemctl reload nginx

# Domain Configuration
MAIN_DOMAIN=mozloja.online
API_DOMAIN=api.mozloja.online
DNS_PROVIDER=cloudflare

# Storage Limits (in MB)
DEFAULT_STORAGE_LIMIT=1000
MAX_UPLOAD_SIZE=100

# SSL Configuration
SSL_EMAIL=admin@mozloja.online
USE_SSL=true
CERTBOT_PATH=/usr/bin/certbot

# Monitoring
ENABLE_MONITORING=true
MONITORING_INTERVAL=300000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/api.log

